<% layout("/layouts/boilerplate") %>

    <body>
        <h1 class="text-center my-4">Update Listing</h1>

        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card shadow-lg p-4 transparent">
                        <form action="/listing/<%= showListing._id %>/edit?_method=PUT" method="POST"
                            enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="title" class="form-label">Title:</label>
                                <input type="text" class="form-control" id="title" name="title"
                                    value="<%= showListing.title %>" required>
                            </div>

                            <div class="mb-3">
                                <label for="author" class="form-label">Author:</label>
                                <input type="text" class="form-control" id="author" name="author"
                                    value="<%= showListing.author %>" required>
                            </div>

                            <div class="mb-3">
                                <label for="condition" class="form-label">Condition of the Book:</label>
                                <select name="condition" id="condition" class="form-select" required>
                                    <option value="New" <%=showListing.condition==="New" ? "selected" : "" %>>New
                                    </option>
                                    <option value="Good" <%=showListing.condition==="Good" ? "selected" : "" %>>Good
                                    </option>
                                    <option value="Bad" <%=showListing.condition==="Bad" ? "selected" : "" %>>Bad
                                    </option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="price" class="form-label">Price:</label>
                                <input type="number" class="form-control" id="price" name="price"
                                    value="<%= showListing.price %>" required min="0">
                            </div>

                            <div class="mb-3">
                                <label for="description" class="form-label">Description:</label>
                                <input type="text" class="form-control" id="description" name="description"
                                    value="<%= showListing.description %>" required>
                            </div>

                            <div class="mb-3">
                                <label for="image" class="form-label">Upload Image:</label>
                                <input type="file" class="form-control" id="image" name="image"
                                    value="<%= showListing.image %>" required>
                            </div>

                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-primary px-4">Update</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>